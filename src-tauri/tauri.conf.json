{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Steamboard",
  "identifier": "com.fatfishlab.steamboard",
  "version": "1.0.11",
  "build": {
    "beforeDevCommand": "deno task ui",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Steamboard",
        "label": "main",
        "maximizable": true,
        "resizable": true,
        "width": 1280,
        "height": 850
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src":  "ipc: tauri: http://tauri.localhost http://ipc.localhost",
        "font-src": [
          "https://fonts.gstatic.com",
          "https://fonts.googleapis.com"
        ],
        "img-src": "'self' data: https://shared.akamai.steamstatic.com",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      },
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "longDescription": "Keep your financial data local, private and automatically up to date.\nExport them into multiple formats and get prettier dashboards.",
    "homepage": "https://steamboard.app",
    "resources": {
      "./steamboard.sql": "steamboard.sql"
    },
    "category": "Utility",
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/logo.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}